{
	"compilerOptions": {
		"lib": ["dom", "es6"],
		"target": "es5",
		"module": "commonjs",
		"sourceMap": true,
		"noImplicitAny": false,
		"removeComments": false,
		"declaration": false,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "../lib/"
	},
	"filesGlob": [
		"../typings/**/*.*.ts",
		"../typings-custom/*.d.ts",
		"../node_modules/**/dist/*.d.ts",
		"../src/**/*.ts"
	],
	"files": [
		"./index.ts",
		"../typings/index.d.ts",
		"../typings-custom/index.d.ts"
	]
}
